<% ('include partials/_header') %>
<form action="/login" method="POST">
  <div class="input-group" style="position: absolute; width: 40%; top: 10%; margin-left: 40%; margin-right: 40%;">    
    <input type="email" id="email" name="email" class="form-control" autocomplete="off" placeholder="Email">
  </div>
  <div class="input-group" style="position: absolute; width: 40%; top: 30%; margin-left: 40%; margin-right: 40%;">
    <input type="password" id="password" name="password" class="form-control" autocomplete="off" placeholder="password">
  </div>
  
    <button class="btn btn-success" type="submit" style="position: absolute; width: 5%; margin-left: 45%; margin-right: 45%; top: 40%;">Login</button>
  
</form>